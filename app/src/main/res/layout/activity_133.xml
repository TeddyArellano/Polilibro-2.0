<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Unit1.Activity_133">

    <FrameLayout
        android:layout_width="410dp"
        android:layout_height="654dp"
        android:background="#FFF9EB"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".UnitsActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="658dp"
            android:orientation="vertical">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ivLogo"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginStart="10dp"
                        android:src="@mipmap/icon_polilibro" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:text="Cálculo Aplicado"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="Polilibro"
                        android:textSize="10pt"
                        android:textStyle="bold" />

                </LinearLayout>

            </FrameLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="515dp"
                android:baselineAligned="false">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/imageView87"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        app:srcCompat="@drawable/simpsonuno" />

                    <ImageView
                        android:id="@+id/imageView88"
                        android:layout_width="match_parent"
                        android:layout_height="170dp"
                        app:srcCompat="@drawable/simpsondos" />

                    <ImageView
                        android:id="@+id/imageView89"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        app:srcCompat="@drawable/simpsontres" />

                    <ImageView
                        android:id="@+id/imageView90"
                        android:layout_width="match_parent"
                        android:layout_height="260dp"
                        app:srcCompat="@drawable/simpsoncuatro" />

                    <Space
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <ImageView
                        android:id="@+id/imageView91"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        app:srcCompat="@drawable/simpsoncinco" />

                    <ImageView
                        android:id="@+id/imageView92"
                        android:layout_width="match_parent"
                        android:layout_height="240dp"
                        app:srcCompat="@drawable/simpsonseis" />

                    <ImageView
                        android:id="@+id/imageView93"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:srcCompat="@drawable/simpsonsiete" />

                    <ImageView
                        android:id="@+id/imageView94"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        app:srcCompat="@drawable/simpsonocho" />

                    <ImageView
                        android:id="@+id/imageView95"
                        android:layout_width="match_parent"
                        android:layout_height="280dp"
                        app:srcCompat="@drawable/simpsonnueve" />

                    <ImageView
                        android:id="@+id/imageView96"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:srcCompat="@drawable/simpsondiez" />

                    <ImageView
                        android:id="@+id/imageView97"
                        android:layout_width="match_parent"
                        android:layout_height="140dp"
                        app:srcCompat="@drawable/simpsononce" />

                    <ImageView
                        android:id="@+id/imageView98"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:srcCompat="@drawable/simpsondoce" />

                    <ImageView
                        android:id="@+id/imageView99"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:srcCompat="@drawable/simpsontrece" />
                </LinearLayout>
            </ScrollView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">

                        <Button
                            android:id="@+id/btnBack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|start"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/buttons_lower"
                            android:text="ATRÁS"
                            android:textColor="#FFFFFF" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center"
                        android:layout_marginEnd="15dp"
                        android:background="@drawable/button_unit1"
                        android:gravity="center"
                        android:text="UNIDAD 1"
                        android:textColor="@color/black"
                        android:textSize="15pt"
                        android:textStyle="bold" />

                </FrameLayout>
            </LinearLayout>

        </LinearLayout>

    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
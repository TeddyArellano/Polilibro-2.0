<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9EB"
    tools:context=".Unit2Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/buttons_lower"
                    android:textColor="#FFFFFF"
                    android:text="ATRÁS"
                    android:layout_gravity="center|start"/>

            </LinearLayout>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15pt"
                android:layout_gravity="end|center"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_unit2"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="UNIDAD 2"/>

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //2.1

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="12pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:background="@drawable/button_select"
                        android:textColor="#2A9AC6"
                        android:text="2.1 Formas indeterminadas"/>

                    <Button
                        android:id="@+id/btn211Introduction"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="2.1.1 Introducción"
                        android:textColor="#2A9AC6"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn212LHopital"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="2.1.2 La regla de L’ Hôpital"
                        android:textColor="#2A9AC6"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn213ProductoInd"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="2.1.3 Producto indeterminado"
                        android:textColor="#2A9AC6"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn214DiferenciaInd"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="2.1.4 Diferencia indeterminada"
                        android:textColor="#2A9AC6"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn215PotenciasInd"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="2.1.5 Potencias indeterminadas"
                        android:textColor="#2A9AC6"
                        android:textSize="20dp" />

                </LinearLayout>

                //2.2

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="12pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:background="@drawable/button_select"
                        android:textColor="#2A9AC6"
                        android:text="2.2 Integrales impropias"/>

                    <Button
                        android:id="@+id/btn221Introduccion"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="2.2.1 Introducción"
                        android:textColor="#2A9AC6"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn222IntegralesImp"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="2.2.2 Integrales impropias con límites de integración infinitos"
                        android:textColor="#2A9AC6"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn223IntegralesDisc"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="2.2.3 Integrales con discontinuidades infinitas"
                        android:textColor="#2A9AC6"
                        android:textSize="20dp" />

                </LinearLayout>

                //Extras

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnEjercicios"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_unit2"
                        android:text="Lista Ejercicios Resueltos"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btnCalculadora"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_unit2"
                        android:text="Cálculadora Unidad 2"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/icon_polilibro" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:layout_gravity="center"
                    android:text="Cálculo Aplicado"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    android:text="Polilibro"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
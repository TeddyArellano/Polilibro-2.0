<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreditsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <Button
            android:id="@+id/btnBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="ATRÁS"/>



        <TextView
            android:id="@+id/tvCreditos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:textSize="15pt"
            android:layout_marginTop="10dp"
            android:text="CRÉDITOS"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvCreditosText"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="10pt"
        android:layout_marginTop="12dp"
        android:justificationMode="inter_word"
        android:text="Las autoras de este libro-cuaderno de
        trabajo, estamos convencidas que le será útil al estudiante
        que cursa la Unidad de Aprendizaje de Cálculo integral, aplicaciones y series infinitas, porque el material ha sido desarrollado por las autoras y validado por estudiantes que ya han llevado el curso."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivLogo"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/icon_polilibro" />

        <TextView
            android:id="@+id/tvCalculoAplicado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_marginTop="12dp"
            android:text="Cálculo Aplicado"/>

        <TextView
            android:id="@+id/tvPolilibro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="10pt"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="12dp"
            android:text="Polilibro"/>

    </LinearLayout>


</FrameLayout>
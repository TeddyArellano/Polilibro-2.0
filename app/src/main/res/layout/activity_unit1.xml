<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9EB"
    tools:context=".Unit1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/buttons_lower"
                    android:textColor="#FFFFFF"
                    android:text="ATRÁS"
                    android:layout_gravity="center|start"/>

            </LinearLayout>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15pt"
                android:layout_gravity="end|center"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_unit1"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="UNIDAD 1"/>

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //1.1

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="12pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:background="@drawable/button_select"
                        android:textColor="#FF0000"
                        android:text="1.1 Área bajo la curva"/>

                    <Button
                        android:id="@+id/btn111Introduction"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.1.1 Introducción"
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn112SumasDeReimann"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.1.2 Sumas de Reimann"
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                </LinearLayout>

                //1.2

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="12pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:background="@drawable/button_select"
                        android:textColor="#FF0000"
                        android:text="1.2 Integral Definida"/>

                    <Button
                        android:id="@+id/btn122Introducion"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.1.2 Introducción"
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn122PropiedadesIntegralD"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.2.2 Propiedades de la integral definida"
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn113TeoremaFundCal"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.2.3 Teorema fundamental del cálculo"
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                </LinearLayout>

                //1.3

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="12pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:background="@drawable/button_select"
                        android:textColor="#FF0000"
                        android:text=" 1.3 Integración numérica "/>

                    <Button
                        android:id="@+id/btn131Trapecio"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.3.1 Trapecio"
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn132Simpson"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.3.2 Simpson"
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                </LinearLayout>

                //1.4

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="12pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:background="@drawable/button_select"
                        android:textColor="#FF0000"
                        android:text="1.4 Aplicaciones integral definida"/>

                    <Button
                        android:id="@+id/btn141Introducion"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.4.1 Introducción"
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn142AreaCurvas"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.4.2 Área entre curvas"
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn143VolumenSolidos"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.4.3 Volúmenes de sólidos de revolución: discos, arandelas y capas cilíndricas."
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn144VolumenSecciones"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.4.4 Volúmenes por secciones transversales"
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn145LogitudArco"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="1.4.5 Longitud de arco."
                        android:textColor="#FF0000"
                        android:textSize="20dp" />

                </LinearLayout>

                //Extras

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnEjercicios"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_unit1"
                        android:text="Lista Ejercicios Resueltos"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btnCalculadora"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_unit1"
                        android:text="Cálculadora Unidad 1"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/icon_polilibro" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:layout_gravity="center"
                    android:text="Cálculo Aplicado"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    android:text="Polilibro"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>
<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF9EB"
    tools:context=".Unit4Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/btnBack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/buttons_lower"
                    android:textColor="#FFFFFF"
                    android:text="ATRÁS"
                    android:layout_gravity="center|start"/>

            </LinearLayout>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15pt"
                android:layout_gravity="end|center"
                android:layout_marginEnd="15dp"
                android:background="@drawable/button_unit4"
                android:textColor="@color/black"
                android:gravity="center"
                android:text="UNIDAD 4"/>

        </FrameLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                //4.1

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="40dp"
                        android:textStyle="bold"
                        android:textSize="12pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:background="@drawable/button_select"
                        android:textColor="#1AC158"
                        android:text="4.1 Series de Potencia"/>

                    <Button
                        android:id="@+id/btn411"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="4.1.1 Introducción"
                        android:textColor="#1AC158"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn412"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="4.1.2 Radio e intervalo de convergencia"
                        android:textColor="#1AC158"
                        android:textSize="20dp" />

                </LinearLayout>

                //4.2

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="12pt"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginBottom="10dp"
                        android:gravity="center"
                        android:background="@drawable/button_select"
                        android:textColor="#1AC158"
                        android:text="4.2 Series de Taylor y McLaurin"/>

                    <Button
                        android:id="@+id/btn421"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="4.2.1 Serie de Taylor"
                        android:textColor="#1AC158"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btn422"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_select"
                        android:text="4.2.2 Serie de McLaurin"
                        android:textColor="#1AC158"
                        android:textSize="20dp" />

                </LinearLayout>


                //Extras

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/btnEjercicios"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_unit4"
                        android:text="Lista Ejercicios Resueltos"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                    <Button
                        android:id="@+id/btnCalculadoraUnit4"
                        android:textAllCaps="false"
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:layout_gravity="center"
                        android:background="@drawable/button_unit4"
                        android:text="Cálculadora Unidad 4"
                        android:textColor="#000000"
                        android:textSize="20dp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="80dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/ivLogo"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:src="@mipmap/icon_polilibro" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:layout_gravity="center"
                    android:text="Cálculo Aplicado"/>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:textSize="10pt"
                    android:layout_gravity="end|center"
                    android:gravity="center"
                    android:text="Polilibro"/>

            </LinearLayout>

        </FrameLayout>

    </LinearLayout>

</FrameLayout>